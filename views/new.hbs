<script src="/js/new.js"></script>
<div class="container-fluid" style="padding-top:70px">
  <form  action="/entry" method="POST">
    <div class="form-group row mb-3">
      <div class="col-md-6">
        <label class="form-label" for="title">Заголовок</label> 
        <input type="text" class="form-control" id="title" name = "title" placeholder="Введите заголовок">
      </div>
    </div>
    <div class="form-group row mb-3">
      <div  class="col-md-12">
      <label class="form-label" for="text">Текст</label> 
      <textarea class="form-control" id="text" name = "text" placeholder="Вы ограничены только Вашей фантазией"></textarea>
    </div>
    <div class="col-md-8">
      <div  class="col-md-12">
        <label for="tags" class="form-label">Теги</label>
        <select id="tags" class="form-control" name = "tags">
          {{#each tags}}
		      	<option value={{this._id}}>{{this.reference}}</option>
          {{/each}}
        </select> 
        <p class="help-block"><small>Выберите теги из списка</small></p> 
        <button class="btn" name="tagMore" href="/tag">Еще тег</button>
      </div>  
    <div class="form-group">
      <button class="btn" name="buttonSignIn" type="submit" style ="background-color: blue; color: white; margin-left: 450px; margin-bottom: 10px;">Добавить пост
      </button>   
    </div>
  </form>
</div>

